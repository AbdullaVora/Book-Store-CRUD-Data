<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BookStore</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <header>
      <div class="logo">
        <h1>BookStore</h1>
      </div>
      <nav>
        <ul>
          <li><a href="/" class="add">Add Data</a></li>
          <li><a href="#">Home</a></li>
          <li><a href="#">About Us</a></li>
          <li><a href="#">Contact</a></li>
          <li><a href="#">Shop</a></li>
        </ul>
      </nav>
    </header>
    <main>
      <div class="">
        <h2>
          Find the book <br />
          you've been looking for
        </h2>
        <div class="search-bar">
          <input type="text" placeholder="Search by book title" />
          <button>Search</button>
        </div>
        <div class="books-section p-5">
          <div class="row">
            <% data.map((val) => { %>
            <div class="col-6">
              <div class="book">
                <div class="row">
                  <div class="col-5">
                    <div class="img">
                    <img
                      src="<%= val.url %>"
                      alt="Amet pellentesque velit"
                      class="img-fluid"
                    />
                  </div>
                  </div>
                  <div class="col-7 py-4 data">
                    <h3 class="pb-3 fw-bolder"><%= val.name %></h3>
                    <p class="pb-2 fw-bold"><%= val.author %></p>
                    <p class="pb-2 fw-bold"><%= val.publisher %></p>
                    <p class="pb-3 fw-bold">$ <%= val.price %>/-</p>
                    <p class="pb-3 fw-bold hidden" id="dsc"><%= val.dsc %></p>
                    <div class="d-flex">
                        <div class="col-6">
                        <button class="details w-100" onclick="dscSlide(this)">More Details</button>
                        <a href="/delete?id=<%= val._id %>"><button class="delete w-100">Delete</button></a>

                    </div>
                    <div class="col-6">
                        <button class="buy ms-3 w-100">Buy</button>
                        <a href="/edit?id=<%= val._id %>"><button class="edit ms-3 w-100">Edit</button></a>

                    </div>
                </div>
                  </div>
                </div>
              </div>
            </div>
            <%})%>
          </div>
        </div>
      </div>
    </main>
    <script>
    function dscSlide(button) {
      const dsc = button.closest('.book').querySelector('#dsc');
      if (dsc.classList.contains('hidden')) {
        dsc.classList.remove('hidden');
        dsc.classList.add('visible');
      } else {
        dsc.classList.remove('visible');
        dsc.classList.add('hidden');
      }
    }
    </script>
  </body>
</html
